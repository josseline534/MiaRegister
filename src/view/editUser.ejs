<%- include('./partials/_header.ejs'); -%>
    <title>Editar</title>
</head>
<body class="principal" onpaste="return false">
    <div class="d-flex">
        <%- include('./partials/_menu.ejs'); -%>
        <div class="w-100">
            <div class="text-center modal-dialog">
                <div class="col-sm-8 mainSection">
                    <div class="modal-content">
                        <div class="col-12 userImg">
                            <img class="imagen" src="/img/avatar.png" alt="Avatar">
                        </div>
                        <form action="/user/edit/<%= usuario._id %>" method="POST" class="col-12">
                            <div class="form-group nameGroup">
                                <input class="form-control"
                                name="name"
                                type="text"
                                placeholder="Nombre"
                                required
                                value= "<%= usuario.name %>">
                            </div>
                            <div class="form-group lastnameGroup">
                                <input class="form-control"
                                name="lastName"
                                type="text"
                                placeholder="Apellido"
                                required
                                value= "<%= usuario.lastname %>">
                            </div>
                            <div class="form-group idGroup">
                                <input class="form-control"
                                name="cedula"
                                id="cedula"
                                type="number"
                                placeholder="Identificación"
                                required
                                onkeypress='return validaNumericos(event)'
                                value= "<%= usuario.identify %>">
                            </div>
                            <div class="form-group userGroup">
                                <input class="form-control"
                                name="usuario"
                                type="text"
                                placeholder="Usuario"
                                required
                                disabled
                                value= "<%= usuario.user %>">
                            </div>
                            <div class="form-group passwordGroup">
                                <input class="form-control"
                                name="password"
                                type="password"
                                placeholder="Actualizar Contraseña"
                                required
                                value= "<%=usuario.password %>">
                            </div>
                            <div class="input-group mb-3 rolUserGroup">
                                <select class="custom-select rolGroup" name="rol" >
                                    <% if(usuario.rol == 'admin'){ %>
                                        <option value="admin">Administrador</option>
                                        <option value="vendedor">Vendedor</option>
                                    <% }else { %>
                                        <option value="vendedor">Vendedor</option>
                                        <option value="admin">Administrador</option>
                                    <%}%>
                                </select>
                            </div>
                            <div class="btn-toolbar justify-content-md-center">
                                <div class="btn-group mr-4">
                                    <a href="/users" class="button btn btn-warning form-control">
                                        <i class="fas fa-arrow-alt-circle-left"></i>  Cancelar
                                    </a>
                                </div>
                                <div class="btn-group">
                                    <button type="submit" class="button btn btn-info form-control">
                                        <i class="fas fa-sign-in-alt"></i>  Actualizar
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="col-12 forgot">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('./partials/_footer.ejs'); -%>