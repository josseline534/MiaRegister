<%- include('./partials/_header.ejs'); -%>
    <title>Productos</title>
</head>
<body class="principal">
    <div class="d-flex">
        <%- include('./partials/_menu.ejs'); -%>
        <div class="w-100">
            <div class="container mb-5 ">
                <a href="/promociones/add" class="btn btn-info mt-5"><i class="fas fa-plus"></i>  Nueva Promoción</a>
                <nav class="navbar justify-content-between">
                    <a class="navbar-brand"></a>
                    <form class="form-inline" action="/promociones/searchPromocion" method="POST">
                        <input class="form-control mr-sm-2"
                        type="search"
                        name="search"
                        placeholder="Buscar"
                        aria-label="Search">
                        <button class="btn btn-info my-2 my-sm-0" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </nav>
                <%- include('./partials/_message.ejs'); -%>
                <table class="table table-bordered table-striped mt-5">
                    <thead class="tablePrimary">
                        <tr>
                            <th>Num.</th>
                            <th>Código</th>
                            <th>Detalle</th>
                            <th>Stock</th>
                            <th>Precio</th>
                            <th>Operación</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = promociones.length-1; i>=0; i--){%>
                            <tr>
                                <td><%=promociones.length-i%></td>
                                <td><%=promociones[i].codigo%></td>
                                <td><%=promociones[i].detalle%></td>
                                <td><%=promociones[i].stock%></td>
                                <td><%=promociones[i].precio%></td>
                                <td>
                                    <a href=""
                                    class="btn btn-info"
                                    data-toggle="modal"
                                    data-target="#verModal">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <!--Modal ver-->
                                    <div class="modal fade" id="verModal"
                                    tabindex="-1" role="dialog"
                                    aria-labelledby="verModalLabel"
                                    aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content myModal">
                                                <div class="modal-header">
                                                    <h4 class="modal-title text-danger" id="verModalLabel">
                                                        <i class="fas fa-gift mr-2"></i> <%=promociones[i].detalle%>
                                                    </h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body font-weight-bold text-center">
                                                    <ul class="list-group">
                                                        <li class="list-group-item active strong">Contenido:</li>
                                                        <% for(let j=0; j < promociones[i].productos.length; j++){%>
                                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                                <%=promociones[i].productos[j].id.detalle%>
                                                                <span class="badge badge-primary badge-pill">
                                                                    <%=promociones[i].productos[j].cantidad%>
                                                                </span>
                                                            </li>
                                                        <%}%>
                                                    </ul>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <a
                                                    href=""
                                                    type="button"
                                                    class="btn btn-info">
                                                        Aceptar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a
                                    href="/promociones/deleteProd/<%=promociones[i]._id%>"
                                    class="btn btn-danger"
                                    data-toggle="modal"
                                    data-target="#deleteModal"
                                    >
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                    <a href="/venta/llenarPromocion/<%=promociones[i]._id%>&"
                                        class="btn btn-success"
                                        data-toggle="tooltip"
                                        data-placement="bottom"
                                        title="Vender">
                                            <i class="fab fa-sellcast"></i>
                                    </a>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('./partials/_footer.ejs'); -%>