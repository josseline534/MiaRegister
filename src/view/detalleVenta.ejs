<%- include('./partials/_header.ejs'); -%>
    <title>Detalle Compra</title>
</head>
<body class="principal" onpaste="return false">
    <div class="d-flex">
        <%- include('./partials/_menu.ejs'); -%>
        <div class="w-100">
            <div class="d-flex">
            </div>
            <div class="d-flex mt-5">
                <div class="col-sm-4 text-center modal-dialog">
                    <div class="mainSection">
                        <div class="modal-content">
                            <div class="col-12 userImg">
                                <img class="imagen" src="/img/product.png" alt="Product">
                            </div>
                            <div class="card border-info text-dark mb-3 ml-3 mr-3" style="max-width: 18rem;">
                                <div class="card-header h3">Venta</div>
                                <div class="card-body">
                                    <h5 class="card-title text-primary"><%= venta.codigo %></h5>
                                    <ul class="list-group list-group-flush text-left">
                                        <li class="list-group-item">
                                            <strong class="mr-3">Usuario:</strong>
                                            <%= venta.user.user %>
                                        </li>
                                        <li class="list-group-item">
                                            <strong class="mr-4">Fecha:</strong>
                                            <%= venta.fecha.getDate() %>-<%= venta.fecha.getMonth() %>-<%= venta.fecha.getFullYear() %>
                                        </li>
                                        <li class="list-group-item">
                                            <strong class="mr-5">Total:</strong>
                                            <span>$</span>
                                            <%= parseFloat(venta.total).toFixed(3) %>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 mt-5 mr-3">
                    <table class="table table-bordered table-striped">
                        <thead class="tablePrimary">
                            <tr>
                                <th>Num.</th>
                                <th>Detalle</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < venta.productos.length; i++){%>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= venta.productos[i].id.detalle %></td>
                                    <td><%= venta.productos[i].cantidad %></td>
                                    <td><%= parseFloat(venta.productos[i].total).toFixed(2) %></td>
                                </tr>
                            <%}%>
                            <% for (let i=0; i < venta.promocion.length; i++){%>
                                <tr>
                                    <td><%= i+venta.productos.length+1 %></td>
                                    <td><%= venta.promocion[i].id.detalle %></td>
                                    <td><%= venta.promocion[i].cantidad %></td>
                                    <td><%= parseFloat(venta.promocion[i].total).toFixed(2) %></td>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                    <div class="offset-9">
                        <a href="/ventas"
                        class="button btn btn-warning">
                            <i class="fas fa-arrow-alt-circle-left"></i>  Finalizar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('./partials/_footer.ejs'); -%>