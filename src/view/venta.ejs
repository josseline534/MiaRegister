<%- include('./partials/_header.ejs'); -%>
    <title>Venta</title>
</head>
<body class="principal">
    <div class="d-flex">
        <%- include('./partials/_menu.ejs'); -%>
        <div class="w-100">
            <div class="container mb-5 ">
                <a href="/venta/formVentas" class="btn btn-info mt-5"><i class="fas fa-plus"></i>  Nueva Venta</a>
                <nav class="navbar justify-content-between">
                    <a class="navbar-brand"></a>
                    <form class="form-inline" action="/ventas/searchVentas" method="POST">
                        <input class="form-control"
                            type="search"
                            name="search"
                            placeholder="MM-DD-AAAA"
                            aria-label="Search">
                        <button class="btn btn-info my-2 my-sm-0" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </nav>
                <%- include('./partials/_message.ejs'); -%>
                <table class="table table-bordered table-striped mt-3">
                    <thead class="tablePrimary">
                        <tr>
                            <th>Codigo</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Operaci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=ventas.length-1; i>=0; i-- ){%>
                            <tr>
                                <td><%=ventas[i].codigo%></td>
                                <td><%=(ventas[i].fecha).toDateString()%></td>
                                <td><%=parseFloat(ventas[i].total).toFixed(2)%></td>
                                <td>
                                    <a href="/ventas/detalle/<%=ventas[i]._id%>"
                                    class="btn btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a
                                        href="/ventas/delete/<%=ventas[i]._id%>"
                                        class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('./partials/_footer.ejs'); -%>